body
  include ./partials/header.pug

  .container
    .row
      .col-sm
        h4(style='padding-top: 20px;') Search For Books
        form(action='/books' method="get")
          .form-group
            label(for='searchTitle') Title
            input#searchTitle.form-control(name='title' aria-describedby='titleHelp' placeholder='Enter title')
          .form-group
            label(for='searchAuthor') Author
            input#searchAuthor.form-control(name='author' aria-describedby='authorHelp' placeholder='Enter author')
          .form-group
            label(for='searchISBN') ISBN
            input#searchISBN.form-control(name='ISBN' aria-describedby='isbnHelp' placeholder='Enter ISBN')
          .form-group
            label(for='searchISBN') Publisher
            input#searchISBN.form-control(name='publisher' aria-describedby='publisherHelp' placeholder='Enter publisher')
          .form-group
            label(for='searchGenre') Genre
            select.custom-select#bookGenre(name='genre')
              option(value="") -- Select One --
              each g in genres
                option(value=g.id) #{g.name}
          button.btn.btn-primary(type='submit') Search