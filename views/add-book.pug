body
  script(src='script.js')
  include owner-header.pug

  p
  .container
    .row
      .col-sm
        h4 Add a Book
        p
        form(action='/search/results' method="post")
          h5 Public information
          .form-group
            label(for='exampleInputEmail1') Title
            input#exampleInputEmail1.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter title')
          .form-group
            label(for='exampleInputEmail1') Author
            select.custom-select
              option(selected='') Select author
              option(value='1') One
              option(value='2') Two
              option(value='3') Three
          .form-group
            label(for='exampleInputEmail1') ISBN
            input#exampleInputEmail1.form-control(name='ISBN' aria-describedby='emailHelp' placeholder='Enter ISBN')
          .form-group
            label(for='exampleInputEmail1') Genre
            select.custom-select
              option(selected='') Select genre
              option(value='1') One
              option(value='2') Two
              option(value='3') Three
          .form-group
            label(for='exampleInputEmail1') Price
            input#exampleInputEmail1.form-control(name='price' aria-describedby='emailHelp' placeholder='Enter price')
          .form-group
            label(for='exampleInputEmail1') Number of pages
            input#exampleInputEmail1.form-control(name='number-of-pages' aria-describedby='emailHelp' placeholder='Enter number of pages')
          .form-group
            label(for='exampleInputEmail1') Edition
            input#exampleInputEmail1.form-control(name='publisher' aria-describedby='emailHelp' placeholder='Enter edition')
          .form-group
            label(for='exampleInputEmail1') Publisher
            select.custom-select
              option(selected='') Select publisher
              option(value='1') One
              option(value='2') Two
              option(value='3') Three
          br
          h5 Publish date
          input#start(type='date' name='trip-start' value='2018-07-22' min='1000-01-01' max='2021-12-11')

          p
          br
          h5 Private information
          .form-group
            label(for='exampleInputEmail1') Stock
            input#exampleInputEmail1.form-control(name='publisher' aria-describedby='emailHelp' placeholder='Enter stock')

          .form-group
            label(for='exampleInputEmail1') Publisher fee
            input#exampleInputEmail1.form-control(name='publisher' aria-describedby='emailHelp' placeholder='Enter publisher fee')

          button.btn.btn-primary(type='submit') Add book
        br
        br