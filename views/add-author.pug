body
  
  include ./partials/header.pug

  p
  .container
    .row
      .col-sm
        h4 Add an Author
        form
          .form-group
            label(for='authorName') Name
            input#authorName.form-control(name='authorName' aria-describedby='emailHelp' placeholder='Enter name')
          .form-group
            label(for='authorEmail') Email
            input#authorEmail.form-control(name='authorEmail' aria-describedby='emailHelp' placeholder='Enter email')
          .form-group
            label(for='authorBiography') Biography
            input#authorBiography.form-control(name='authorBiography' aria-describedby='emailHelp' placeholder='Enter biography')
          .form-group
            label(for='authorWebsite') Website
            input#authorWebsite.form-control(name='authorWebsite' aria-describedby='emailHelp' placeholder='Enter biography')
          button#addAuthor.btn.btn-primary Add author