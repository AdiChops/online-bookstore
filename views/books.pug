  p
  .container
    .row
      .col-sm
        h4 Add a Book
        form(action='/search/results' method="post")
          .form-group
            label(for='exampleInputEmail1') Title
            input#exampleInputEmail1.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter title')
          .form-group
            label(for='exampleInputEmail1') Author
            input#exampleInputEmail1.form-control(name='author' aria-describedby='emailHelp' placeholder='Enter author')
          .form-group
            label(for='exampleInputEmail1') ISBN
            input#exampleInputEmail1.form-control(name='ISBN' aria-describedby='emailHelp' placeholder='Enter ISBN')
          .form-group
            label(for='exampleInputEmail1') Genre
            input#exampleInputEmail1.form-control(name='genre' aria-describedby='emailHelp' placeholder='Enter genre')
          .form-group
            label(for='exampleInputEmail1') Price
            input#exampleInputEmail1.form-control(name='genre' aria-describedby='emailHelp' placeholder='Enter price')
          button.btn.btn-primary(type='submit') Add
