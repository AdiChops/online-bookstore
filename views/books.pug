body
  include ./partials/header.pug

  p
  .container
    .row
      .col-sm
        br
        if session.loggedInType == 'owner'
          h4 Add to Database
          p
          a.link-primary(href='/authors/add') Add an author
          p
          a.link-primary(href='/publishers/add') Add a publisher
          p
          a.link-primary(href='/books/add') Add a book
          br
          br
        if !search
          h4 All Books
          //- if there is at least one recommended book
          //- p Books highlighted in green are recommended by us :) Enjoy!
        else
          h4 Search Results
        if books.length == 0
          p No Results Found
        each book in books
          //- if not recommended
          a.link-primary(href='/books/' + book.isbn) #{book.title}
