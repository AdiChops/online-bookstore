    link(rel='stylesheet', href='/stylesheets/style.css')

body
  include ./partials/header.pug

  p
  .container
    .row
      .col-sm
        - cost = 0
        - x = 0
        while x < order.books.length
          - cost += order.quantities[x] * order.prices[x]
          - x++

        h4 Order ID: #{order.id}
        p
        h5 Purchase
        - index = 0
        while index < order.books.length
          p #{order.quantities[index]} of #{order.books[index]}
          p
          - index++
        h5 Details
        p
        a.card-text Order date: #{order.order_date}
        p
        a.card-text Total cost: $#{cost}
        p
        h5 Shipping
        p
        a.card-text Tracking ID: #{order.tracking_no}
        p
        a.card-text Destination address: #{order.destination}
        p
        h5 Billing
        p
        a.card-text Credit card number: #{order.bank_account}
        p
        a.card-text Billing address: #{order.billing_address}
        p